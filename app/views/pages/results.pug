extends ../layout
block content
    .container
        .row
            .panel.panel-primary
                .panel-heading
                    h3 #{keyword}
                .panel-body
                    each item in results
                        .col-md-2
                            .thumbnail
                                a(href="/movie/" + item._id)
                                    img(src=item.poster,alt=item.title)
                                .caption
                                    h3 #{item.title}
                                    p: a.btn.btn-primary(href="/movie/" + item._id,role="button") 观看预告片
            ul.pagination
                -for(var i = 0; i < totalPage; i++)
                if(currentPage==(i+1))
                    li.active
                        span #{currentPage}
                else
                    li
                        a(href="/results/?p="+i+"&"+query) #{i+1}





